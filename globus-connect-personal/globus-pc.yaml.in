apiVersion: apps/v1beta1
kind: StatefulSet
metadata:
  name: globus-pc
  namespace: @NAMESPACE@
spec:
  serviceName: globus-pc-service
  replicas: 1
  template:
    metadata:
      labels:
        k8s-app: globus-pc
    spec:
      containers:
      - name: globus-pc-server
        image: @REGISTRY@/globus-personal-connect:latest
        imagePullPolicy: Always
        args: ["/usr/sbin/globus-gridftp-server", "-c", "/etc/gridftp.conf", "-pidfile", "/var/run/globus-gridftp-server.pid", "-no-detach", "-config-base-path", "/data"]
        volumeMounts:
            - mountPath: /data
              name: globus-pc-data
      volumes:
      - name: globus-pc-data
        persistentVolumeClaim:
          claimName: globus-pc-data
      nodeSelector:
        nw: 40G
